@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

/* modern theme */
@font-face {
	font-family: 'Quicksand';
	src: url('/fonts/Quicksand.ttf');
	font-display: swap;
}

/* tutorial markdown */
.markdown code,
.markdown p {
	margin: 0 0 1.5rem 0;
}

.markdown h4 {
	margin: 2rem 0 0 0;
}

.markdown ul {
	list-style-type: none;
	padding-left: 0;
}

.markdown li:before {
	content: '\2022\00a0';
	color: white;
}

.markdown li {
	margin-left: 1rem;
	display: flex;
	align-items: center;
}

.markdown .flex-auto {
	flex-grow: 1;
}
